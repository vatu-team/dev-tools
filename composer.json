{
    "name": "vatu/dev-tools",
    "description": "A collection of development tools use in Vatu projects.",
    "type": "metapackage",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "brain/monkey": "2.6.1",
        "dealerdirect/phpcodesniffer-composer-installer": "0.7.2",
        "php-parallel-lint/php-parallel-lint": "1.3.2",
        "phpcompatibility/phpcompatibility-wp": "2.1.4",
        "phpstan/extension-installer": "1.2.0",
        "phpstan/phpstan": "1.9.3",
        "phpunit/phpunit": "9.5.27",
        "povils/phpmnd": "3.0.1",
        "sebastian/phpcpd": "6.0.3",
        "squizlabs/php_codesniffer": "3.7.1",
        "szepeviktor/phpstan-wordpress": "1.1.6",
        "wp-coding-standards/wpcs": "2.3.0",
        "wptrt/wpthemereview": "0.2.1",
        "yoast/phpunit-polyfills": "1.0.4"
    },
    "config": {
      "sort-packages": true,
      "optimize-autoloader": true,
      "preferred-install": "dist",
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "prefer-stable": true
    ,
  "scripts": {
    "post-update-cmd": [
      "sed -i.tmp 's/function wp_hash_password/#function wp_hash_password/' vendor/php-stubs/wordpress-stubs/wordpress-stubs.php",
      "sed -i.tmp 's/function wp_set_password/#function wp_set_password/' vendor/php-stubs/wordpress-stubs/wordpress-stubs.php",
      "sed -i.tmp 's/function wp_generate_password/#function wp_generate_password/' vendor/php-stubs/wordpress-stubs/wordpress-stubs.php",
      "sed -i.tmp 's/function wp_check_password/#function wp_check_password/' vendor/php-stubs/wordpress-stubs/wordpress-stubs.php"
    ]
  }
}
